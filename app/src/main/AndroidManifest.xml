<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jydev.nadoapplication">


    <application
        android:allowBackup="true"
        android:icon="@drawable/login_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.NadoApplication">

        <activity
            android:name=".activity.FitnessInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Main" >

        </activity>
        <activity
            android:name=".activity.HealthDataRegActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Main" />
        <activity
            android:name=".activity.FitnessSelActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Main" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Main" />
        <activity
            android:name=".activity.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Main" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NadoApplication.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.NadoApplication.Main">

        </activity>
    </application>

</manifest>